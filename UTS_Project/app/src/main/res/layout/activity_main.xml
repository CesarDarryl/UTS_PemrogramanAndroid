<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cons_parent_1"
    android:background="@color/custom_1">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/background"
        android:background="@drawable/background_main"
        app:layout_constraintTop_toTopOf="@id/cons_parent_1"
        app:layout_constraintLeft_toLeftOf="@+id/cons_parent_1"
        app:layout_constraintRight_toRightOf="@+id/cons_parent_1"
        app:layout_constraintBottom_toBottomOf="@+id/cons_parent_1"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="DATA MAHASISWA TELADAN"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@+id/cons_parent_1"
        app:layout_constraintRight_toRightOf="@+id/cons_parent_1"
        app:layout_constraintTop_toTopOf="@id/cons_parent_1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_sub_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/cons_parent_1"
        app:layout_constraintRight_toRightOf="@+id/cons_parent_1"
        app:layout_constraintTop_toTopOf="@+id/cons_parent_1">

        <Button
            android:id="@+id/button_data_mhs"
            android:layout_width="324dp"
            android:layout_height="62dp"
            android:layout_marginTop="312dp"
            android:background="@drawable/round_button"
            android:fontFamily="sans-serif"
            android:text="Lihat List Mahasiswa"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="btnLihatDataMahasiswa"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintLeft_toLeftOf="@id/cons_sub_1"
            app:layout_constraintRight_toRightOf="@id/cons_sub_1"
            app:layout_constraintTop_toTopOf="@+id/cons_sub_1" />

        <Button
            android:id="@+id/button_tambah_mhs"
            android:layout_width="324dp"
            android:layout_height="62dp"
            android:layout_marginTop="76dp"
            android:background="@drawable/round_button_red"
            android:fontFamily="sans-serif"
            android:text="Tambah Data Mahasiswa"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="btnTambahDataMahasiswa"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@id/button_data_mhs"
            app:layout_constraintRight_toRightOf="@id/button_data_mhs"
            app:layout_constraintTop_toTopOf="@+id/button_data_mhs" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>